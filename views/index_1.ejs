<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ("./reference/head.ejs") %>

        <script>

            function info(concert, genre) {
                console.log("info suc")
                location.href = "/concert/index?concert=" + concert + "&genre=" + genre;
            }

        </script>
</head>

<body>

    <!-- header gnb -->
    <div class="header">
        <%- include ("./reference/header.ejs") %>
    </div>

    <!-- index page wrap box = body_main -->
    <div class="body_main">

        <!-- img slde start -->
        <header id="carouselExampleCaptions" class="carousel slide visual" data-bs-ride="carousel">
            <ol class="carousel-indicators">
                <li data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"></li>
                <li data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"></li>
                <li data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"></li>
            </ol>

            <div class="carousel-inner" id="img-slide">
                <div class="carousel-item active">
                    <a href="#">
                    <!-- slide img1 = css background  //이미지 변경시 css 백그라운드 이미지 url 변경-->
                    </a>
                </div>
                <div class="carousel-item">
                    <a href="#">
                    <!-- lide img2 = css background -->
                    </a>

                </div>
                <div class="carousel-item">
                    <a href="#">
                    <!-- lide img3 = css background -->
                    </a>
                </div>
            </div>

            <a class="carousel-control-prev slide_btn" href="#carouselExampleCaptions" role="button" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden"></span>
            </a>
            <a class="carousel-control-next slide_btn" href="#carouselExampleCaptions" role="button" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden"></span>
            </a>

        </header>
        <!-- img slde end -->

        <!-- mobile menu start-->
        <div class="d-flex text-center m-menu">
            <div class="p-2 w-25">
                <a href="javascript:menu('0')">
                    <i class="fas fa-headphones-alt fa-2x" style="color:#46c0f7"></i>
                    <span>공연</span>
                </a>
            </div>
            <div class="p-2 w-25">
                <a href="javascript:menu('1')">
                    <i class="far fa-images fa-2x" style="color:#46a7f7"></i>
                    <span>전시</span>
                </a>
            </div>
            <div class="p-2 w-25">
                <a href="javascript:menu('2')">
                    <i class="fas fa-running fa-2x" style="color:#7881f6"></i>
                    <span>스포츠</span>
                </a>
            </div>
            <div class="p-2 w-25">
                <%if(!loggedname){%>
                    <a href="/login">
                        <i class="fas fa-ticket-alt fa-2x" style="color:#a44af5"></i>
                        <span>로그인</span>
                    </a>
                <%}else{%>
                    <a href="/logout">
                        <i class="fas fa-ticket-alt fa-2x" style="color:#a44af5"></i>
                        <span>로그아웃</span>
                    </a>
                <%}%>
            </div>
        </div>
        <!-- mobile menu end-->

        <!--모바일 공간박스-->
        <div class="container-fluid m-box">
        </div>


        <!-- ticket zone wrap box -->
        <div class="container my-3">

            
            <div class="row">
                <!-- ticket zone title -->
                <div class="col-12 title_bg">
                    <h3>Ticket Zone</h3>
                </div>

                <!-- 티켓등록시에 보여지는 리스트 -->
                <%for(var i=0; i < concert.length; i++){%>
                    <div class="col-lg-3 col-md-4 col-6 mb-3 p-2">
                        <div class="card card-radius card-box">
                            <a href="javascript:info('<%=concert[i].id%>', '<%=concert[i].genre%>')">
                                <div class="card-img-top">
                                    <img src="<%=concert[i].poster_img%>" alt="">
                                </div>

                                <div class="card-body card-title ">
                                    <p><strong>
                                            <%=concert[i].name%>
                                        </strong></p>
                                    <div class="card-text fs-6">
                                        <span>
                                            <%=concert[i].date%>
                                        </span>
                                        <small>
                                            <%=concert[i].place%>
                                        </small>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div>
                <%}%>

            </div>
            <!-- /.row -->

        </div>
        <!-- /.ticket zone wrap box -->


