            <td><input type="text" name="seat"/></td>
          </tr>
          <tr>
            <td>가격</td>
            <td><input type="text" name="price"/></td>
          </tr>
          <tr>
            <td>수수료</td>
            <td><input type="number" name="fee"/></td>
          </tr>
          <tr>
            <td>취소 기한</td>
            <td><input type="text" name="cancleDate"/></td>
          </tr>
          <tr>
            <td>취소 수수료</td>
            <td><input type="text" name="cancleFee"/></td>
          </tr>
          <tr>
          </tr>
