<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="./css/style_test.css" />    
    <title>BlockChain Ticket</title>
  </head>
  <body>
    <!--main section-->
    <section id="main">
      <!--main header -->
      <header>
        <div class="logo"><span>BlockChain Ticket</span></div>
      </header>
      <!--end main header -->
      <div class="main container">
        <div class="blackboard">
          <div class="loginLogo">
            <div class="mainLogo">
              <span>BlockChain Ticket</span>
            </div>
          </div>
          <div class="loginDiv">
            <div class="signIn">
              <h1>Sign In</h1>
              <form method="POST" action="/manager/main">
                <div class="signInInput">
                  <input type="text" name="id" placeholder="ID" />
                  <input
                    type="password"
                    name="pass"
                    placeholder="Password"
                  />
                  <button type="submit">Login</button>
                </div>
              </form>
              <p>
                <a href="/manager/signup">Sign up</a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </section>
    <!--end main section-->
  </body>
</html>
