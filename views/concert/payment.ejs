    <meta name="author" content="">

    <title>Heroic Features - Start Bootstrap Template</title>



    <!-- Bootstrap core CSS -->
    <link href="../vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <link href="../vendor/bootstrap/css/style.css" rel="stylesheet">

    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>

    <!--Bootstrap cdn-->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj" crossorigin="anonymous"></script>

    <!--font-awesome-->
    <script src="https://kit.fontawesome.com/5f8c8c97ed.js" crossorigin="anonymous"></script>


</head>

<body>

    <div class="pay-wrap">
  
        <div class="pay-title">
            <div class="pay-title-box">
                <ul>
                    <li><img src="https://ticketimage.interpark.com/Play/image/large/20/20010952_p.gif"alt=""></li>
                    <li>
                        <h6>내가 고른 제목</h6>
                        <p>2020.12.12 | 2:00 pm | R/12</p>
                    </li>
                </ul>
            </div>
        </div>   
        
        <div class="pay-coupon-bg">
            <div class="pay-coupon">
                <h5 class="pay-h5">할인쿠폰</h5>
                <div class="coupon-list">
                    <ul>
                        <li>쿠폰정보표시란</li>
                        <li><button>쿠폰</button></li>
                    </ul>
                </div>
            </div>   
        </div>   
        
        <div class="pay-body-bg">
            <div class="pay-body">
                <h5 class="pay-h5">결제수단</h5>
                <ul class="pay-tab">
                     <li id="tab1" class="btnCon">
                        <a class="btn first" href="#tab1">무통장입금</a>
                        <div class="tabCon">
                            <select name="bank">
                                <option value="basic">은행</option>
                                <option value="basic">국민은행</option>
                                <option value="basic">신한은행</option>
                                <option value="basic">기업은행</option>
                                <option value="basic">우리은행</option>
                            </select>
                        </div>
                    </li>
                    <li id="tab2" class="btnCon">
                        <a class="btn first" href="#tab2">신용카드</a>
                        <div class="tabCon" >
                            <select name="bank">
                                <option value="basic">은행</option>
                                <option value="kb">국민은행</option>
                                <option value="sh">신한은행</option>
                                <option value="com">기업은행</option>
                                <option value="we">우리은행</option>
                            </select>
                            <select name="hal">
                                <option value="basic">할부</option>
                                <option value="basic">1개월</option>
                                <option value="basic">2개월</option>
                                <option value="basic">3개월</option>
                                <option value="basic">4개월</option>
                            </select>
                        </div>
                    </li>
                    
                </ul>           
            </div>
        </div>
        
        <div class="pay-bottom-bg">
           
            <div class="pay-bottom">
                <h5 class="pay-h5">결제예정금액</h5>
                <ul class="pay">
                    <li>할인</li>
                    <li>원</li>
                </ul>
            </div>
            
            <button>결제하기</button>
            
        </div>
        
    </div>
    
    <script>
    location.href = "#tab1";
    </script>

</body>

</html>